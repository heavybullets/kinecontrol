<Window x:Class="kinecontrol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="437" Width="888" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <my:KinectDepthViewer HorizontalAlignment="Left" Margin="12,0,0,20" Name="kinectDepthViewer1" VerticalAlignment="Bottom" Width="320" IsTabStop="False" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" Height="381" />
        <my:KinectSkeletonViewer HorizontalAlignment="Left" Margin="338,3,0,0" Name="kinectSkeletonViewer1" VerticalAlignment="Top" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" Width="320" Height="320" />
        <my:KinectSensorChooser HorizontalAlignment="Left" Margin="192,46,0,0" Name="kinectSensorChooser1" VerticalAlignment="Top" Width="328" />
        <Button Content="Calibrate" Height="23" HorizontalAlignment="Left" Margin="574,361,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Image Height="150" HorizontalAlignment="Left" Margin="666,3,0,0" Name="depthPlayer" Stretch="Fill" VerticalAlignment="Top" Width="200" />
    </Grid>
</Window>
